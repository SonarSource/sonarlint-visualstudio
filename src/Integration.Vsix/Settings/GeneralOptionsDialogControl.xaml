<UserControl x:Class="SonarLint.VisualStudio.Integration.Vsix.GeneralOptionsDialogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:SonarLint.VisualStudio.Integration.Vsix.Resources"
             xmlns:links="clr-namespace:SonarLint.VisualStudio.Core;assembly=SonarLint.VisualStudio.Core"
             xmlns:imaging="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.Imaging"
             xmlns:vsimagecatalog="clr-namespace:Microsoft.VisualStudio.Imaging;assembly=Microsoft.VisualStudio.ImageCatalog"
             x:ClassModifier="internal"
             d:DesignHeight="350"
             d:DesignWidth="450"
             mc:Ignorable="d" Name="GeneralOptionsUserControl">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style TargetType="TextBlock">
                <Setter Property="TextWrapping" Value="Wrap" />
                <Setter Property="TextTrimming" Value="None" />
                <Setter Property="LineStackingStrategy" Value="MaxHeight" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer>
        <Grid Margin="0,0,0,5" DataContext="{Binding ElementName=GeneralOptionsUserControl, Path=ViewModel}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>


            <GroupBox Grid.Row="0" Margin="5,0,0,5" Header="{x:Static res:Strings.AnalysisScopeHeader}">
                <StackPanel Margin="5" Orientation="Horizontal">
                    <CheckBox
                        Content="{x:Static res:Strings.FocusOnNewCodeCheckbox}"
                        IsChecked="{Binding Path=IsFocusOnNewCodeEnabled}" />
                    <imaging:CrispImage Moniker="{x:Static vsimagecatalog:KnownMonikers.StatusHelpOutline}"
                                        Margin="5, 0">
                        <imaging:CrispImage.ToolTip>
                            <TextBlock Text="{x:Static res:Strings.FocusOnNewCodeTooltipGeneric}" />
                        </imaging:CrispImage.ToolTip>
                    </imaging:CrispImage>
                </StackPanel>
            </GroupBox>

            <GroupBox Grid.Row="1" Header="Standalone mode">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Grid.Row="0" Content="Edit Settings"
                            Height="24"
                            Margin="5" Padding="5,2.5"
                            Command="{Binding Path=OpenSettingsFileCommand}" />
                    <TextBlock Grid.Column="1" Grid.Row="0"
                               VerticalAlignment="Center"
                               Margin="5">
                        <Run Text="{x:Static res:Strings.OpenPerUserText}" />
                        <Hyperlink NavigateUri="{x:Static links:DocumentationLinks.SettingsJsonFileUri}"
                                   RequestNavigate="ViewInBrowser">
                            settings file
                        </Hyperlink>
                        <Run Text="{x:Static res:Strings.SettingsFileDescriptionText}" />
                    </TextBlock>
                    <StackPanel Grid.Column="1" Grid.Row="1">
                        <TextBlock
                            VerticalAlignment="Center"
                            Margin="5,0,0,5" Text="{x:Static res:Strings.SettingsFileWillBeCreatedText}" />
                        <TextBlock
                            VerticalAlignment="Center"
                            Margin="5,8,0,5">
                            <Run Text="{x:Static res:Strings.SettingsFileIgnoredText}" />
                            <Run Text="See the" />
                            <Hyperlink NavigateUri="{x:Static links:DocumentationLinks.DisablingARuleUri}"
                                       RequestNavigate="ViewInBrowser">
                                documentation
                            </Hyperlink>
                            <Run Text="for more information." />
                        </TextBlock>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <StackPanel x:Name="VerbosityPanel" Grid.Row="2" Margin="5">
                <TextBlock Text="Logging level:" />

                <ComboBox SelectedIndex="2" HorizontalContentAlignment="Stretch" Margin="0,5,0,0" Padding="5,2.5"
                          ItemsSource="{Binding Path=DaemonLogLevels}"
                          SelectedItem="{Binding Path=SelectedDaemonLogLevel}" />
            </StackPanel>

            <StackPanel x:Name="CredentialStorePanel" Grid.Row="3" Grid.ColumnSpan="2" Margin="5">
                <TextBlock Text="Credential Store Type (RESTART TO APPLY):" />

                <ComboBox SelectedIndex="0" HorizontalContentAlignment="Stretch" Margin="0,5,0,0" Padding="5,2.5"
                          ItemsSource="{Binding Path=CredentialStoreTypes}" SelectedItem="{Binding Path=CredentialStoreType}" />
            </StackPanel>
            
            <GroupBox Grid.Row="4" Margin="5" Padding="0,5"
                      Header="{x:Static res:Strings.JreLocationLabel}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="{x:Static res:Strings.JreLocationDescriptionText}" />
                    <TextBox Grid.Row="1" Margin="0,5"
                             Text="{Binding Path=JreLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Grid.Row="2" Text="{x:Static res:Strings.RestartIdeToApplyOptionLabel}" />
                </Grid>
            </GroupBox>

            <StackPanel Grid.Row="5" Margin="5" Orientation="Vertical">
                <TextBlock Text="{x:Static res:Strings.CloudSettings}" Margin="0,0,0,5" />
                <CheckBox Content="{x:Static res:Strings.ShowRegionCheckbox}"
                          IsChecked="{Binding Path=ShowCloudRegion}"
                          VerticalContentAlignment="Center" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>