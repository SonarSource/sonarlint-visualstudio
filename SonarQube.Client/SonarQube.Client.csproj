<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="14.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props" Condition="Exists('$(MSBuildExtensionsPath)\$(MSBuildToolsVersion)\Microsoft.Common.props')" />
  <PropertyGroup>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
    <Platform Condition=" '$(Platform)' == '' ">AnyCPU</Platform>
    <ProjectGuid>{5E513FC3-BDA7-40F2-8B6A-1BB9372ACB99}</ProjectGuid>
    <OutputType>Library</OutputType>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <RootNamespace>SonarQube.Client</RootNamespace>
    <AssemblyName>SonarQube.Client</AssemblyName>
    <TargetFrameworkVersion>v4.6</TargetFrameworkVersion>
    <FileAlignment>512</FileAlignment>
    <TargetFrameworkProfile />
    <NuGetPackageImportStamp>
    </NuGetPackageImportStamp>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <OutputPath>bin\Debug\</OutputPath>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugType>pdbonly</DebugType>
    <Optimize>true</Optimize>
    <OutputPath>bin\Release\</OutputPath>
    <DefineConstants>TRACE</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <PropertyGroup>
    <PackagesRootDir Condition="Exists('../../packages')">../../packages</PackagesRootDir>
    <PackagesRootDir Condition="!Exists('../../packages')">../packages</PackagesRootDir>
  </PropertyGroup>
  <ItemGroup>
    <Reference Include="Google.Protobuf, Version=3.6.1.0, Culture=neutral, PublicKeyToken=a7d26565bac4d604, processorArchitecture=MSIL">
      <HintPath>$(PackagesRootDir)\Google.Protobuf.3.6.1\lib\net45\Google.Protobuf.dll</HintPath>
      <Private>True</Private>
    </Reference>
    <Reference Include="Newtonsoft.Json, Version=6.0.0.0, Culture=neutral, PublicKeyToken=30ad4fe6b2a6aeed, processorArchitecture=MSIL">
      <HintPath>$(PackagesRootDir)\Newtonsoft.Json.6.0.8\lib\net45\Newtonsoft.Json.dll</HintPath>
      <Private>True</Private>
    </Reference>
    <Reference Include="System" />
    <Reference Include="System.Net.Http" />
    <Reference Include="System.Web" />
    <Reference Include="System.Xml" />
  </ItemGroup>
  <ItemGroup>
    <Compile Include="**\*.cs" Exclude="**\obj\**\*;**\Protobuf\*" />
    <!-- Conditionally include shared assembly info and signing in case they are not where we expect them to be -->
    <Compile Condition="Exists('..\..\src\AssemblyInfo.Shared.cs')" Include="..\..\src\AssemblyInfo.Shared.cs">
      <Link>Properties\AssemblyInfo.Shared.cs</Link>
    </Compile>
    <Compile Condition="Exists('..\..\src\Signing.cs')" Include="..\..\src\Signing.cs">
      <Link>Properties\Signing.cs</Link>
    </Compile>
    <!-- Exclude the protobuf-generated files from analysis -->
    <Compile Include="Messages\Protobuf\ScannerInput.cs">
      <SonarQubeExclude>true</SonarQubeExclude>
    </Compile>
    <Compile Include="Messages\Protobuf\Constants.cs">
      <SonarQubeExclude>true</SonarQubeExclude>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <None Include="app.config" />
    <None Include="packages.config" />
  </ItemGroup>
  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />

  <!-- Generate protobuf classes, supports Windows, OSX and Linux execution, adapted from SonarAnalyzer.Common -->
  <PropertyGroup>
    <ProtobufOut>./Messages/Protobuf</ProtobufOut>
  </PropertyGroup>
  <Target Name="GenerateProtobufClasses" BeforeTargets="CoreCompile" Outputs="$(ProtobufOut)/ScannerInput.cs,$(ProtobufOut)/Constants.cs" Inputs="$(ProtobufOut)/scanner_input.proto,$(ProtobufOut)/constants.proto">
    <Message Importance="high" Text="Generating protobuf classes..." />
    <!-- There is no built-in way to distinguish between Linux and OSX -->
    <PropertyGroup>
      <PlatformDir Condition="'$(OS)'=='Windows_NT'">windows_x64</PlatformDir>
      <!--<PlatformDir Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::OSX)))' == 'true'">macosx_x64</PlatformDir>
      <PlatformDir Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Linux)))' == 'true'">linux_x64</PlatformDir>-->
    </PropertyGroup>
    <PropertyGroup>
      <ProtocCompiler>"$(PackagesRootDir)/Grpc.Tools.1.4.1/tools/$(PlatformDir)/protoc.exe"</ProtocCompiler>
    </PropertyGroup>
    <Exec Command="$(ProtocCompiler) -I=$(ProtobufOut) --csharp_out=$(ProtobufOut) $(ProtobufOut)/scanner_input.proto" />
    <Exec Command="$(ProtocCompiler) -I=$(ProtobufOut) --csharp_out=$(ProtobufOut) $(ProtobufOut)/constants.proto" />
    <Message Importance="high" Text="Protobuf classes generated." />
  </Target>
</Project>